<% include header %>
<!--		
	====================================
		 		 Login Form
	=====================================
-->			
<div class="row">
	<div class="small-12 columns">
		<p> </p>
	</div>
	<div class="small-12 columns">
		<h1 class="text-center">Login</h1>
	</div>
	<div class="small-12 columns">
<!--						
		Form Start
-->
		<form action='/users/loginaction' method="post">	
			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
						Email
-->
						<input type="text" name="email" placeholder="Email">
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
						Password
-->
						<input type="password" name="pass" placeholder="Password">
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
						Forgot Password Link
-->
<!--						<a href="#" ><p class="text-center">Forgot your password?</p></a>-->
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
							Submit
-->
							<input class="small-12 columns submit button [radius round]" type="submit" value="Submit">
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
<% include footer %>