<% include header %>
<!--		
====================================
			Sign up Form
=====================================
-->			
<div class="row">
	<div class="small-12 columns">
		<p> </p>
	</div>
	<div class="small-12 columns">
		<h1 class="text-center">Create Account</h1>
	</div>
	<div class="small-12 columns">
<!--						
		Form Start
-->
		<form action="/users/signupaction" method="post">	

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">						
<!--						
						First Name
-->
						<input name="fname" type="text" placeholder="First name">
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">

<!--						
						Last Name
-->
						<input name="lname" type="text" placeholder="Last name">
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
						Email
-->
						<input name="email" type="email" placeholder="Email">
					</div>
				</div>
			</div>		
			
			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
						Phone
-->
						<input name="phone" type="tel" max=10 placeholder="Phone #">
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
							Password
-->
							<input name="pass" type="password" placeholder="Password">
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
						Re-Type Password
-->
						<input name="repass" type="password" placeholder="Re-type Password">
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
						Submit
-->
						<input class="small-12 columns submit button [radius round]" type="submit" value="Create Account">
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
<% include footer %>