<% include header %>
<!--		
====================================
		Make Appointment Form
=====================================
-->			
<div class="row">
	<div class="small-12 columns">
		<p> </p>
	</div>
	<div class="small-12 columns">
		<h1 class="text-center">Make Appointment</h1>
	</div>
	<div class="small-12 columns">
<!--						
		Form Start
-->
		<form action="/appointments/createaction" method="GET">	

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">						
<!--						
						Date
-->
						<input name="date" type="date" value="<%=date %>" required>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">

<!--						
						Time
-->
						<select name="time">
							<option disabled>Select a Time...</option>
							<option value="9:00 am">9:00 am</option>
							<option value="9:30 am">9:30 am</option>
							<option value="10:00 am">10:00 am</option>
							<option value="10:30 am">10:30 am</option>
							<option value="11:00 am">11:00 am</option>
							<option value="11:30 am">11:30 am</option>
							<option value="1:00 pm">1:00 pm</option>
							<option value="1:30 pm">1:30 pm</option>
							<option value="2:00 pm">2:00 pm</option>
							<option value="2:30 pm">2:30 pm</option>
							<option value="3:00 pm">3:00 pm</option>
							<option value="3:30 pm">3:30 pm</option>
							<option value="4:00 pm">4:00 pm</option>
							<option value="4:30 pm">4:30 pm</option>
							<option value="5:00 pm">5:00 pm</option>
							<option value="5:30 pm">5:30 pm</option>
						</select>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
						Barber
-->
						<fieldset>
							<select name="barber">
								<option value="default">Select a Barber...</option>

								<% for(var i=0; i<barbers.length; i++){ %>
									<option value="<%=barbers[i][0]%>"><%=barbers[i][0]%></option>
								<% } %>

							</select>
							<p class="text-center h6.subheader">If this field is left empty, we will assign a barber to you.</p>
						</fieldset>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="large-12 columns">
					<div class="row collapse">
<!--						
						Submit
-->
						<input class="small-12 columns submit button [radius round]" type="submit" value="Book it">
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
<% include footer %>